<?xml version="1.0" encoding="UTF-8"?>
<!-- ADL SCORM 1.2 Content Packaging Extension Schema -->
<!-- Source: ADL (Advanced Distributed Learning) -->
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            xmlns:adlcp="http://www.adlnet.org/xsd/adlcp_rootv1p2"
            targetNamespace="http://www.adlnet.org/xsd/adlcp_rootv1p2"
            elementFormDefault="qualified"
            version="1.2">

  <xsd:element name="location" type="xsd:string"/>
  <xsd:element name="scormType">
    <xsd:simpleType>
      <xsd:restriction base="xsd:string">
        <xsd:enumeration value="sco"/>
        <xsd:enumeration value="asset"/>
      </xsd:restriction>
    </xsd:simpleType>
  </xsd:element>

  <xsd:attribute name="scormtype">
    <xsd:simpleType>
      <xsd:restriction base="xsd:string">
        <xsd:enumeration value="sco"/>
        <xsd:enumeration value="asset"/>
      </xsd:restriction>
    </xsd:simpleType>
  </xsd:attribute>

  <xsd:element name="prerequisites" type="xsd:string"/>
  <xsd:element name="maxtimeallowed" type="xsd:string"/>
  <xsd:element name="timelimitaction">
    <xsd:simpleType>
      <xsd:restriction base="xsd:string">
        <xsd:enumeration value="exit,message"/>
        <xsd:enumeration value="exit,no message"/>
        <xsd:enumeration value="continue,message"/>
        <xsd:enumeration value="continue,no message"/>
      </xsd:restriction>
    </xsd:simpleType>
  </xsd:element>
  <xsd:element name="datafromlms" type="xsd:string"/>
  <xsd:element name="masteryscore" type="xsd:string"/>

</xsd:schema>
