<?xml version="1.0" encoding="UTF-8"?>
<manifest identifier="saudi-foundation-day"
          version="1.0"
          xmlns="http://www.imsproject.org/xsd/imscp_rootv1p1p2"
          xmlns:adlcp="http://www.adlnet.org/xsd/adlcp_rootv1p2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.imsproject.org/xsd/imscp_rootv1p1p2 imscp_rootv1p1p2.xsd
                              http://www.adlnet.org/xsd/adlcp_rootv1p2 adlcp_rootv1p2.xsd">

  <!-- Metadata -->
  <metadata>
    <schema>ADL SCORM</schema>
    <schemaversion>1.2</schemaversion>
  </metadata>

  <!-- Organizations -->
  <organizations default="saudi_foundation_day_org">
    <organization identifier="saudi_foundation_day_org">
      <title>يوم التأسيس السعودي</title>

      <item identifier="item_sco_01" identifierref="sco_01_introduction" isvisible="true">
        <title>المقدمة - يوم التأسيس</title>
      </item>

      <item identifier="item_sco_02" identifierref="sco_02_story" isvisible="true">
        <title>قصة التأسيس</title>
      </item>

      <item identifier="item_sco_03" identifierref="sco_03_identity" isvisible="true">
        <title>الهوية والرموز</title>
      </item>

      <item identifier="item_sco_04" identifierref="sco_04_quiz" isvisible="true">
        <title>اختبار المعرفة</title>
      </item>

    </organization>
  </organizations>

  <!-- Resources -->
  <resources>

    <!-- SCO 01: Introduction -->
    <resource identifier="sco_01_introduction"
              type="webcontent"
              adlcp:scormtype="sco"
              href="sco_01_introduction/index.html">
      <file href="sco_01_introduction/index.html"/>
      <dependency identifierref="shared_resources"/>
    </resource>

    <!-- SCO 02: Story -->
    <resource identifier="sco_02_story"
              type="webcontent"
              adlcp:scormtype="sco"
              href="sco_02_story/index.html">
      <file href="sco_02_story/index.html"/>
      <dependency identifierref="shared_resources"/>
    </resource>

    <!-- SCO 03: Identity -->
    <resource identifier="sco_03_identity"
              type="webcontent"
              adlcp:scormtype="sco"
              href="sco_03_identity/index.html">
      <file href="sco_03_identity/index.html"/>
      <dependency identifierref="shared_resources"/>
    </resource>

    <!-- SCO 04: Quiz -->
    <resource identifier="sco_04_quiz"
              type="webcontent"
              adlcp:scormtype="sco"
              href="sco_04_quiz/index.html">
      <file href="sco_04_quiz/index.html"/>
      <dependency identifierref="shared_resources"/>
    </resource>

    <!-- Shared Resources -->
    <resource identifier="shared_resources"
              type="webcontent"
              adlcp:scormtype="asset">
      <file href="shared/scorm-api.js"/>
      <file href="shared/base.css"/>
      <file href="shared/theme.css"/>
      <file href="shared/player-shell.css"/>
      <file href="shared/course-custom.css"/>
      <file href="shared/behavior-tracker.js"/>
      <file href="shared/gamification.js"/>
      <file href="shared/engine/slide-controller.js"/>
      <file href="shared/engine/quiz-engine.js"/>
      <file href="shared/assets/icons/arrow-next.svg"/>
      <file href="shared/assets/icons/arrow-prev.svg"/>
      <file href="shared/assets/icons/check-circle.svg"/>
      <file href="shared/assets/icons/info.svg"/>
      <file href="shared/assets/icons/star.svg"/>
      <file href="shared/assets/icons/trophy.svg"/>
      <file href="shared/assets/icons/warning.svg"/>
      <file href="shared/assets/icons/x-circle.svg"/>
    </resource>

  </resources>

</manifest>
