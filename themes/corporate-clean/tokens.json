{
  "name": "Corporate Clean",
  "description": "Light professional theme with clean lines, generous whitespace, and corporate reliability",
  "colors": {
    "primary": "#1E3A5F",
    "primary-dark": "#152B47",
    "primary-light": "#3B82F6",
    "secondary": "#0EA5E9",
    "accent": "#F59E0B",
    "background": "#FAFAFA",
    "surface": "#FFFFFF",
    "surface-elevated": "#FFFFFF",
    "text": "#1F2937",
    "text-secondary": "#6B7280",
    "text-on-dark": "#FFFFFF",
    "border": "#E5E7EB",
    "border-subtle": "#F3F4F6",
    "success": "#10B981",
    "success-bg": "#ECFDF5",
    "error": "#EF4444",
    "error-bg": "#FEF2F2",
    "warning": "#F59E0B",
    "warning-bg": "#FFFBEB",
    "info": "#3B82F6",
    "info-bg": "#EFF6FF",
    "growth": "#8B5CF6",
    "growth-bg": "#F5F3FF"
  },
  "fonts": {
    "heading": "'Noto Kufi Arabic', 'Segoe UI', sans-serif",
    "body": "'Noto Sans Arabic', 'Segoe UI', sans-serif",
    "mono": "'Roboto Mono', monospace",
    "files": ["noto-kufi-arabic-regular.woff2", "noto-kufi-arabic-bold.woff2", "noto-sans-arabic-regular.woff2"]
  },
  "typography": {
    "display": { "size": "2.25rem", "weight": 700 },
    "h1": { "size": "2rem", "weight": 700 },
    "h2": { "size": "1.5rem", "weight": 600 },
    "h3": { "size": "1.25rem", "weight": 600 },
    "body": { "size": "1rem", "weight": 400 }
  },
  "spacing": { "xs": "4px", "sm": "8px", "md": "16px", "lg": "24px", "xl": "32px" },
  "radius": { "sm": "4px", "md": "8px", "lg": "12px" },
  "shadows": {
    "sm": "0 1px 3px rgba(0,0,0,0.06), 0 1px 2px rgba(0,0,0,0.04)",
    "md": "0 4px 8px rgba(0,0,0,0.08)",
    "lg": "0 8px 16px rgba(0,0,0,0.12)"
  },
  "motion": { "fast": "150ms ease", "normal": "250ms ease", "slow": "400ms ease" }
}
