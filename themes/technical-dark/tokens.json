{
  "name": "Technical Dark",
  "description": "Code editor inspired dark theme with monospace typography and terminal aesthetics",
  "colors": {
    "primary": "#22D3EE",
    "primary-dark": "#06B6D4",
    "primary-light": "#67E8F9",
    "secondary": "#A78BFA",
    "accent": "#34D399",
    "background": "#0F172A",
    "surface": "#1E293B",
    "surface-elevated": "#334155",
    "text": "#E2E8F0",
    "text-secondary": "#94A3B8",
    "text-on-dark": "#F8FAFC",
    "border": "#334155",
    "border-subtle": "#1E293B",
    "success": "#34D399",
    "success-bg": "rgba(52, 211, 153, 0.15)",
    "error": "#FB7185",
    "error-bg": "rgba(251, 113, 133, 0.15)",
    "warning": "#FBBF24",
    "warning-bg": "rgba(251, 191, 36, 0.15)",
    "info": "#60A5FA",
    "info-bg": "rgba(96, 165, 250, 0.15)",
    "growth": "#A78BFA",
    "growth-bg": "rgba(167, 139, 250, 0.15)"
  },
  "fonts": {
    "heading": "'JetBrains Mono', 'Fira Code', monospace",
    "body": "'Cairo', 'Noto Sans Arabic', sans-serif",
    "mono": "'JetBrains Mono', 'Fira Code', monospace",
    "files": ["jetbrains-mono-regular.woff2", "jetbrains-mono-bold.woff2", "cairo-regular.woff2"]
  },
  "typography": {
    "display": { "size": "2.25rem", "weight": 700 },
    "h1": { "size": "1.875rem", "weight": 700 },
    "h2": { "size": "1.5rem", "weight": 600 },
    "h3": { "size": "1.25rem", "weight": 600 },
    "body": { "size": "1rem", "weight": 400 }
  },
  "spacing": { "xs": "4px", "sm": "8px", "md": "16px", "lg": "24px", "xl": "32px" },
  "radius": { "sm": "4px", "md": "6px", "lg": "8px" },
  "shadows": {
    "sm": "0 1px 3px rgba(0,0,0,0.4)",
    "md": "0 4px 12px rgba(0,0,0,0.5)",
    "lg": "0 10px 25px rgba(0,0,0,0.6)"
  },
  "motion": { "fast": "100ms ease", "normal": "200ms ease", "slow": "350ms ease" }
}
