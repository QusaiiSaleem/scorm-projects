{
  "name": "Bold Gradient",
  "description": "Vibrant gradient-rich theme with bold colors, mesh backgrounds, and energetic personality",
  "colors": {
    "primary": "#7C3AED",
    "primary-dark": "#6D28D9",
    "primary-light": "#A78BFA",
    "secondary": "#EC4899",
    "accent": "#F97316",
    "background": "#FAFAFF",
    "surface": "#FFFFFF",
    "surface-elevated": "#FFFFFF",
    "text": "#1E293B",
    "text-secondary": "#64748B",
    "text-on-dark": "#F8FAFC",
    "border": "#E2E8F0",
    "border-subtle": "#F1F5F9",
    "success": "#10B981",
    "success-bg": "#ECFDF5",
    "error": "#EF4444",
    "error-bg": "#FEF2F2",
    "warning": "#F59E0B",
    "warning-bg": "#FFFBEB",
    "info": "#3B82F6",
    "info-bg": "#EFF6FF",
    "growth": "#8B5CF6",
    "growth-bg": "#F5F3FF"
  },
  "fonts": {
    "heading": "'Cairo', sans-serif",
    "body": "'Cairo', sans-serif",
    "mono": "'JetBrains Mono', monospace",
    "files": ["cairo-regular.woff2", "cairo-semibold.woff2", "cairo-bold.woff2"]
  },
  "typography": {
    "display": { "size": "2.75rem", "weight": 700 },
    "h1": { "size": "2.25rem", "weight": 700 },
    "h2": { "size": "1.75rem", "weight": 700 },
    "h3": { "size": "1.375rem", "weight": 600 },
    "body": { "size": "1.125rem", "weight": 400 }
  },
  "spacing": { "xs": "4px", "sm": "8px", "md": "16px", "lg": "24px", "xl": "32px" },
  "radius": { "sm": "8px", "md": "16px", "lg": "24px" },
  "shadows": {
    "sm": "0 2px 8px rgba(124, 58, 237, 0.06)",
    "md": "0 4px 16px rgba(124, 58, 237, 0.1)",
    "lg": "0 10px 30px rgba(124, 58, 237, 0.15)"
  },
  "motion": { "fast": "150ms ease", "normal": "300ms ease", "slow": "500ms ease" }
}
