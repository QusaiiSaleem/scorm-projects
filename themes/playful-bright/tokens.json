{
  "name": "Playful Bright",
  "description": "Colorful, rounded, gamified theme with warm energy and celebration",
  "colors": {
    "primary": "#3B82F6",
    "primary-dark": "#2563EB",
    "primary-light": "#60A5FA",
    "secondary": "#10B981",
    "accent": "#F59E0B",
    "background": "#FFF8F0",
    "surface": "#FFFFFF",
    "surface-elevated": "#FFFFFF",
    "text": "#1E293B",
    "text-secondary": "#64748B",
    "text-on-dark": "#FFFFFF",
    "border": "#FED7AA",
    "border-subtle": "#FFF3E0",
    "success": "#10B981",
    "success-bg": "#ECFDF5",
    "error": "#F43F5E",
    "error-bg": "#FFF1F2",
    "warning": "#F59E0B",
    "warning-bg": "#FFFBEB",
    "info": "#3B82F6",
    "info-bg": "#EFF6FF",
    "growth": "#8B5CF6",
    "growth-bg": "#F5F3FF"
  },
  "fonts": {
    "heading": "'Cairo', sans-serif",
    "body": "'Cairo', sans-serif",
    "mono": "'Fira Code', monospace",
    "files": ["cairo-regular.woff2", "cairo-semibold.woff2", "cairo-bold.woff2"]
  },
  "typography": {
    "display": { "size": "2.5rem", "weight": 700 },
    "h1": { "size": "2rem", "weight": 700 },
    "h2": { "size": "1.625rem", "weight": 700 },
    "h3": { "size": "1.375rem", "weight": 600 },
    "body": { "size": "1.125rem", "weight": 400 }
  },
  "spacing": { "xs": "4px", "sm": "8px", "md": "16px", "lg": "24px", "xl": "32px" },
  "radius": { "sm": "12px", "md": "16px", "lg": "24px" },
  "shadows": {
    "sm": "0 2px 8px rgba(59, 130, 246, 0.06)",
    "md": "0 4px 16px rgba(59, 130, 246, 0.1)",
    "lg": "0 10px 30px rgba(59, 130, 246, 0.15)"
  },
  "motion": { "fast": "150ms ease", "normal": "300ms cubic-bezier(0.34, 1.56, 0.64, 1)", "slow": "500ms ease" }
}
